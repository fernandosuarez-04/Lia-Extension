{
  "manifest_version": 3,
  "name": "Soflia Agent",
  "version": "7.0.0",
  "description": "Agente inteligente del ecosistema Soflia",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "sidePanel",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "assets/Icono.png",
      "48": "assets/Icono.png",
      "128": "assets/Icono.png"
    }
  },
  "side_panel": {
    "default_path": "src/popup/index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "assets/Icono.png",
    "48": "assets/Icono.png",
    "128": "assets/Icono.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "offscreen.html", "offscreen.js", "permissions.html", "permissions.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
